{
    "configurations": [
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/openfilz-web"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },

        {
            "type": "java",
            "name": "Spring Boot-DmsApiApplication<openfilz-api>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "org.openfilz.dms.DmsApiApplication",
            "projectName": "openfilz-api",
            "args": "-Xmx512m",
            "envFile": "${workspaceFolder}/.vscode/.env"
        }
    ]
}